        <div class="table-container">
            <table id="couponTable">
                <thead>
                    <tr>
                        <th>Coupon Code</th>
                        <th>Discount Percentage</th>
                        <th>Expiry Date</th>
                        <th>Min Cart Value</th>
                        <th>Usage Limit</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                  <% coupons.forEach(coupon => { %>
                    <tr class="coupon-row">
                      <td><%= coupon.code %></td>
                      <td><%= coupon.discountPercentage %></td>
                      <td><%= coupon.expiryDate.toLocaleDateString("en-US") %></td>
                      <td><%= coupon.minCartValue %></td>
                      <td><%= coupon.usageLimit || 'Unlimited' %></td>
                      <td>
                        <% if (new Date(coupon.expiryDate) > new Date()) { %>
                          Active
                        <% } else { %>
                          Inactive
                        <% } %>
                      </td>
                      <td >
                        <div style="display: flex;">
                        <!-- Add SweetAlert2 confirmation for Delete button -->
                        <form id="deleteForm<%= coupon.id %>" action="/deleteCoupon/<%= coupon.id %>" method="post">
                          <button type="button" class="action-btn delete-btn" onclick="confirmDelete('<%= coupon.id %>')">Delete</button>
                        </form>
                        <a href="/editCouponPage/<%= coupon.id %>" class="action-btn edit-btn">Edit</a>

                      </div>
                      </td>
                      
                    </tr>
