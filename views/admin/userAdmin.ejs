                    <button type="button" class="toggle-button visibility <%= userFin.isBlocked ? 'unblocked-user' : 'blocked-user' %>" onclick="confirmBlock('<%= userFin._id %>')">
                      <% if (userFin.isBlocked) { %>
                        Unblock 
                      <% } else { %>
