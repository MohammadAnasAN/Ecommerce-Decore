    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var listItems = document.querySelectorAll(".list-group-item");
    
        listItems.forEach(function (item) {
          item.addEventListener("click", function () {
            listItems.forEach(function (innerItem) {
              innerItem.classList.remove("active");
            });
            item.classList.add("active");
          });
        });
      });
    
      function validateAndAddNewAddress() {
        const fullName = document.getElementById("first-name").value.trim();
        const houseName = document.getElementById("house-name").value.trim();
        const streetAddress = document.getElementById("street-address").value.trim();
        const country = document.getElementById("country").value;
        const state = document.getElementById("state").value;
        const city = document.getElementById("city").value.trim();
        const pinCode = document.getElementById("pin-code").value.trim();
    
        // Regular expressions for validation
        const fullNameRegex = /^[a-zA-Z]+(?: [a-zA-Z]+)*$/; // Allow spaces between words
        const houseNameRegex = /^[a-zA-Z0-9]+(?: [a-zA-Z0-9]+)*$/; // Allow spaces between words
        const streetAddressRegex = /^\S.*$/; // Must not contain whitespace
        const pinCodeRegex = /^\d{6}$/; // Must be 6 digits
    
        // Validation
        if (!fullNameRegex.test(fullName)) {
          showErrorAlert("Full name must not contain special characters or whitespace.");
          return;
        }
    
        if (!houseNameRegex.test(houseName)) {
          showErrorAlert("House name must not contain special characters or whitespace.");
          return;
        }
    
        if (!streetAddressRegex.test(streetAddress)) {
          showErrorAlert("Street address must not contain whitespace.");
          return;
        }
    
        if (!pinCodeRegex.test(pinCode)) {
          showErrorAlert("Pin code must be 6 digits.");
          return;
        }
    
        // If all validations pass, submit the form
        document.querySelector("form").submit();

        Swal.fire({
      icon: 'success',
      title: 'New Address Added successfully!',
      showConfirmButton: false,
      timer: 1500
    });
      }
    
      function showErrorAlert(message) {
        Swal.fire({
          icon: "error",
          title: "Validation Error",
          text: message,
        });
      }
    </script>
