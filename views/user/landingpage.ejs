    <!-- Products -->
    <div class="product">
  <% products.forEach(product => { %>
    <div class="product-card">
      <a href="/login">
        <div class="product-tumb">
          <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>">
        </div>
        <div class="product-details">
          <h4><a href="/login"><%= product.productName %></a></h4>
          <div class="product-bottom-details">
            <% if (product.offerDiscountPercentage > 0) { %>
              <div class="product-price">
                  <span style="text-decoration: line-through;">₹<%= product.price %></span> 
                  <span style="color: red;">(Offer: <%= product.price - (product.price * product.offerDiscountPercentage / 100).toFixed(2) %> off)</span>
              </div>
          <% } else { %>
              <div class="product-price">₹<%= product.price %></div>
          <% } %>
            <div class="product-links">
              <a href="/login" class="favorite-btn">
                <i class="fa fa-heart"></i>
              </a>
              <a href="/login" class="add-to-cart-btn">
                <i class="fa fa-shopping-cart"></i>
            </a>
              <!-- <form action="/add-to-cart/<%= product.id %>" method="post" class="add-to-cart-form">
                <button type="submit" class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i></button>
              </form> -->
            </div>
          </div>
        </div>
      </a>
    </div>
  <% }); %>
</div>

